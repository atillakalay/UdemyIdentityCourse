@{
    ViewData["Title"] = "AssignRoleToUser";
}
@model List<AdminModel.AssignRoleToUserViewModel>


<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4>Kullanıcıya Rol Atama</h4>
        <form asp-action="AssignRoleToUser" asp-route-userId="@ViewBag.userId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exist"/>
                    <label class="form-check-label" >@Model[i].Name</label>
                    <input type="hidden" asp-for="@Model[i].Name"/>
                    <input type="hidden" asp-for="@Model[i].Id"/>
                </div>
            }
            <div class="form-group mt-3">
                <input type="submit" value="Rol ata" class="btn btn-primary"/>
            </div>

        </form>
        <div>
            <a asp-area="Admin"  asp-controller="Home" asp-action="UserList" class="mt-3">Kullanıcı Listesine Geri Dön</a>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


@{
    ViewData["Title"] = "Index";
}
@model List<AdminModel.RoleViewModel>

<a class="btn btn-primary" asp-controller="Roles" asp-action="RoleCreate" asp-area="Admin">Rol Ekle</a>

<div class="row">
    <div class="col-md-8 offset-md-2">
        @if ((TempData["SuccessMessage"] != null))
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <h2>Rol Listesi</h2>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Rol Adı</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-area="Admin" asp-action="RoleUpdate" asp-controller="Roles" asp-route-id="@item.Id">Güncelle</a>
                        <a class="btn btn-primary btn-sm mt-2 m-lg-2" asp-area="Admin" asp-action="RoleDelete" asp-controller="Roles" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>


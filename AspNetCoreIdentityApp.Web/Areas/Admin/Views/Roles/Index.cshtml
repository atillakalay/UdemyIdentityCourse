
@{
    ViewData["Title"] = "Index";
}
@model List<AdminModel.RoleViewModel>

<a class="btn btn-primary" asp-controller="Roles" asp-action="RoleCreate" asp-area="Admin">Rol Ekle</a>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2>Rol Listesi</h2>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Rol Adı</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

